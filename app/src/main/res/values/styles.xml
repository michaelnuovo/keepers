<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- text views -->

    <style name="overPass" >
        <item name="fontFamily">@font/overpass</item>
    </style>

    <style name="tvDontHaveAccount" parent="overPass">
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="tvCreateAccount" parent="overPass">
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="tvNeedHelp" parent="overPass">
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@color/gold</item>
    </style>
    
    <style name="tvCopyRightFooter" parent="overPass">
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="tvLogin" parent="overPass">
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- buttons -->

    <style name="btnLogin" parent="overPass">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@color/black_171717</item>
        <item name="android:padding">@dimen/login_text_padding_8dp</item>
    </style>

    <!-- edit texts -->

    <style name="etEnterMasterPassword" parent="overPass">
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@color/black_000000</item>
        <item name="android:padding">@dimen/login_text_padding_8dp</item>
    </style>

</resources>